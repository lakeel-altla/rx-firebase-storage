<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:paddingStart="@dimen/content_horizontal_margin"
              android:paddingEnd="@dimen/content_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_weight="4"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_name"
                  android:textAppearance="?android:textAppearanceMedium"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_id"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageButton android:id="@+id/image_button_sync_cloud"
                 android:src="@drawable/ic_cloud_done_black_24dp"
                 android:background="?android:attr/actionBarItemBackground"
                 android:tint="@color/tint_image_button_area_description_model"
                 android:layout_marginStart="@dimen/content_horizontal_margin"
                 android:layout_marginEnd="@dimen/content_horizontal_margin"
                 android:layout_marginTop="@dimen/content_vertical_margin"
                 android:layout_width="@dimen/touch_target_width"
                 android:layout_height="@dimen/touch_target_height"/>

</LinearLayout>
