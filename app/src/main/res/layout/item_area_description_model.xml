<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:paddingStart="@dimen/content_horizontal_margin"
              android:paddingEnd="@dimen/content_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_weight="4"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_name"
                  android:textAppearance="?android:textAppearanceMedium"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_id"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button android:id="@+id/button_export"
            android:text="TODO"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/button_delete"
            android:text="TODO"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
